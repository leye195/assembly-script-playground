{
  "targets": {
    "debug": {
      "outFile": "assembly/build/debug.wasm",
      "textFile": "assembly/build/debug.wat",
      "sourceMap": true,
      "debug": true
    },
    "release": {
      "outFile": "assembly/build/release.wasm",
